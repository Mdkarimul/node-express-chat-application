     div.row 
      div.col-md-6.d-flex.align-items-center.justify-center
       img(src="images/signup.svg" width="100%")
      div.col-md-6 
       h1.display-4.md-4(style='font-size:25px') Welcome !
       form(action="" autocomplete="off")#login-form
