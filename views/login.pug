         input.form-control.p-4(type="email" name="email" placeholder="Email" class="username") 
         span.text-danger.username-error 
        div.form-group.mb-4
         input.form-control.p-4(type="password" name="password" placeholder="Passowrd" class="company-password")
         span.text-danger.password-error  
